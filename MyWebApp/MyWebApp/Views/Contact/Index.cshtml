@model MyWebApp.Models.Contact
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Contact Us Today</h1>

            <p class="lead">Have questions or need assistance? Contact us via phone, email, or the form below!</p>

            <div class="contact-info mb-4">
                <p><strong>Email:</strong> urbanfood@gmail.com</p>
                <p><strong>Phone:</strong> 070 5716510 / 072 2716510</p>
            </div>

            <form asp-action="SubmitForm" method="post">
                <div class="form-group mb-3">
                    <label asp-for="FirstName">First Name *</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName">Last Name *</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ContactNumber">Contact Number *</label>
                    <input asp-for="ContactNumber" class="form-control" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Message">Comment or Message *</label>
                    <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}