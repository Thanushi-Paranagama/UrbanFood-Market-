@model MyWebApp.Models.Item
@{
    ViewData["Title"] = "Delete Item";
}

<!-- Back Button (Top-Left Corner) -->
<button onclick="goBack()" class="back-button">← Back</button>
<h2 class="title">Delete Item</h2>
<a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Back to Dashboard
</a>

<div class="delete-container">
    <div class="warning-box">
        <div class="warning-icon">⚠️</div>
        <h3>Are you sure you want to delete this item?</h3>
        <p>This action cannot be undone.</p>
    </div>

    <div class="item-details">
        <h4>Item Details:</h4>
        <table class="details-table">
            <tr>
                <th>ID:</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Name:</th>
                <td>@Model.ItemName</td>
            </tr>
            <tr>
                <th>Category:</th>
                <td>@Model.Category</td>
            </tr>
            <tr>
                <th>Quantity:</th>
                <td>@Model.Quantity</td>
            </tr>
            <tr>
                <th>Price:</th>
                <td>$@Model.Price</td>
            </tr>
        </table>
    </div>

    <form method="post" asp-action="DeleteItem">
        <input type="hidden" name="id" value="@Model.Id" />
        @Html.AntiForgeryToken()
        <div class="button-group">
            <a asp-action="Index" class="cancel-button">Cancel</a>
            <button type="submit" class="delete-button">Delete</button>
        </div>
    </form>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p class="error-message">@ViewBag.ErrorMessage</p>
}

<script>
    function goBack() {
        window.history.back();
    }
</script>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
        text-align: center;
    }

    .back-button {
        position: absolute;
        top: 80px;
        left: 20px;
        background-color: #ff5733;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        font-weight: bold;
        transition: 0.3s ease;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
    }

    .back-button:hover {
        background-color: #c70039;
    }

    .title {
        color: #333;
        margin-top: 60px;
    }

    .delete-container {
        background: white;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        width: 400px;
        margin: 20px auto;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .warning-box {
        background-color: #fff8e6;
        border: 1px solid #ffd966;
        border-radius: 6px;
        padding: 15px;
        text-align: center;
    }

    .warning-icon {
        font-size: 2rem;
        margin-bottom: 10px;
    }

    .item-details {
        text-align: left;
        border: 1px solid #eee;
        border-radius: 6px;
        padding: 15px;
    }

    .details-table {
        width: 100%;
        border-collapse: collapse;
    }

    .details-table th {
        text-align: left;
        padding: 8px;
        color: #555;
        width: 100px;
    }

    .details-table td {
        padding: 8px;
    }

    .button-group {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 10px;
    }

    .cancel-button {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        flex: 1;
        text-align: center;
        font-weight: bold;
        transition: 0.3s;
    }

    .cancel-button:hover {
        background-color: #5a6268;
    }

    .delete-button {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
        flex: 1;
        font-weight: bold;
        transition: 0.3s;
    }

    .delete-button:hover {
        background-color: #c82333;
    }

    .error-message {
        color: red;
        margin-top: 15px;
        font-weight: bold;
    }
</style>