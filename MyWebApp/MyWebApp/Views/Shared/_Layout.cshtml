<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UrbanFood</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyWebApp.styles.css" asp-append-version="true" />
    <style>
        .custom-navbar {
            position: fixed; /* Stick to the top */
            top: 0;
            left: 0;
            width: 100%;
            background-color: #388E3C; /* Green shade */
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        .custom-navbar .navbar-brand {
            font-size: 22px;
            font-weight: bold;
            color: white;
        }

        .custom-navbar .navbar-nav a {
            text-decoration: none;
            color: white;
            font-size: 18px;
            font-weight: 600;
            padding: 8px 12px;
            border-radius: 6px;
            transition: background 0.3s ease;
        }

        .custom-navbar .navbar-nav a:hover {
            background-color: #4CAF50; /* Lighter green */
        }

        body {
            padding-top: 60px; /* Prevent content from being hidden behind navbar */
        }
        /* Color-matched footer styling */
        footer.footer {
            padding: 10px 0;
            background-color: #6be870; /* Matching navbar green color */
            border-top: 1px solid #2d7a31;
            font-size: 12px;
            color: white;
            
        }

        /* Container adjustments */
        footer .container {
            padding: 0 10px;
        }

        /* Row spacing */
        footer .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0;
        }

        /* Column styling - minimal */
        footer .col-md-4 {
            padding: 0 8px;
            margin-bottom: 0;
        }

        /* Logo styling */
        footer .logoIMG {
            max-width: 80px;
            height: auto;
            margin-bottom: 4px;
        }

        footer .col-md-4:first-child p {
            color: black;
            font-size: 12px; /* Slightly larger */
            font-weight: 500; /* Semi-bold */
            margin: 0;
            line-height: 1.3;
            
        }

        /* Heading styling - tiny */
        footer h4 {
            color: black;
            font-size: 14px; /* Slightly larger */
            font-weight: 700; /* Bold */
            margin: 0 0 5px 0;
            padding-bottom: 3px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
            
        }

        /* Quick links styling - inline */
        footer ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
        }

            footer ul li {
                margin: 0 8px 3px 0;
                padding: 0;
            }

                footer ul li::before {
                    display: none;
                }

                footer ul li a {
                    color: black;
                    text-decoration: none;
                    font-size: 12px; /* Slightly larger */
                    font-weight: 600; /* Semi-bold */
                    align-content: center;
                    text-align:center;
                    justify-content:center;
                }

                    footer ul li a:hover {
                        color: #e0e0e0;
                        text-decoration: underline;
                    }

        /* Contact section styling - compact inline */
        footer .col-md-4:last-child p {
            color: black;
            margin: 0 0 3px 0;
            font-size: 12px; /* Slightly larger */
            font-weight: 500; /* Semi-bold */
            line-height: 1.3;
            display: inline-block;
            margin-right: 10px;
            justify-content: center;
            align-content: center;
            text-align: center;
        }

        /* Extra small footer */
        .small-footer {
            font-size: 13px;
            padding: 3px 0;
            text-align: center;
            background-color: #2d7a31; /* Darker shade of the navbar green */
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.9);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">UrbanFood Market</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Contact" asp-action="Index">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Review">Reviews</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/Images/Web12.png" class="logoIMG">
                    <p>Fresh, organic, and locally sourced food for a better life.</p>
                </div>
                <div class="col-md-4">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                        <li><a asp-controller="Home" asp-action="Login">Place Order </a></li>
                        <li><a asp-controller="Home" asp-action="Review">Reviews </a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Contact Us</h4>
                    <p>Email: urbanfood@gmail.com</p>
                    <p>Phone: 070 5716510 / 072 2716510</p>
                    
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <style>
        .small-footer {
            font-size: 13px; /* Smaller text */
            padding: 3px 0; /* Less padding */
            text-align: center;
        }
    </style>
</body>
</html>
