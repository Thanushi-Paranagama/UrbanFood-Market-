@{
    ViewData["Title"] = "Login";
}
<div class="login-page-wrapper">
    <div class="login-container">
        <div class="login-box">
            <h2>Login</h2>
            @if (ViewBag.Error != null)
            {
                <p class="error-message">@ViewBag.Error</p>
            }
            <form method="post" action="@Url.Action("Login", "Account")">
                <label>Username:</label>
                <input type="text" name="username" required />
                <label>Password:</label>
                <input type="password" name="password" required />
                <button type="submit">Login</button>
            </form>
            <a href="@Url.Action("Guest", "Account")" class="guest-link">Continue as Guest</a>
        </div>
        <div class="image-box">
            <img src="~/images/web10.jpg" alt="Login Image">
        </div>
    </div>
</div>
<style>
    .login-page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 200px);
        padding: 20px;
        background-color: #f3f3f3;
        font-family: 'Poppins', sans-serif;
    }

    .login-container {
        display: flex;
        background: white;
        padding: 40px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        max-width: 900px;
        width: 100%;
    }

    .login-box {
        flex: 1;
        padding-right: 20px;
    }

    .image-box {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .image-box img {
            max-width: 100%;
            border-radius: 10px;
        }

    .error-message {
        color: red;
        font-weight: bold;
    }

    input {
        display: block;
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    button {
        width: 100%;
        background: #4CAF50;
        color: white;
        padding: 10px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        font-size: 16px;
    }

    .guest-link {
        display: block;
        margin-top: 10px;
        color: #007bff;
        text-decoration: none;
        text-align: center;
    }
</style>