@{
    ViewData["Title"] = "Home Page";
}
<div class="homepage-content">
    <div class="main-container">
        <h2>Welcome To UrbanFood Marketplace</h2>
        <p>Fresh, Organic & Locally Sourced Vegetables Just for You! 🥕🥦🍅</p>
    </div>
</div>
<style>
    .homepage-content {
        background: url('@Url.Content("~/Images/Web10.jpg")') center center / cover no-repeat;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 200px);
        text-align: center;
        font-family: 'Poppins', sans-serif;
        padding: 40px 20px;
    }

        /* Add overlay gradient on top of the background image */
        .homepage-content::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(232, 245, 233, 0.7), rgba(200, 230, 201, 0.7)); /* Semi-transparent green gradient */
            z-index: 1;
        }

    .main-container {
        background: rgba(255, 255, 255, 0.9);
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        width: 90%;
        position: relative;
        border: 1px solid rgba(76, 175, 80, 0.3);
        z-index: 2; /* Make sure this appears above the overlay */
    }

        .main-container::before {
            content: "";
            background: url('@Url.Content("~/Images/Web12.png")') no-repeat center center;
            background-size: contain;
            width: 180px;
            height: 180px;
            position: absolute;
            top: -90px;
            left: 50%;
            transform: translateX(-50%);
        }

        /* Add additional top padding to make room for the image */
        .main-container h2:first-child {
            margin-top: 70px;
        }

    h2 {
        font-size: 30px;
        font-weight: bold;
        color: #2E7D32; /* Deep Green */
        margin-bottom: 10px;
    }

    p {
        font-size: 18px;
        color: #388E3C; /* Lighter Green */
        margin-top: 10px;
    }
</style>