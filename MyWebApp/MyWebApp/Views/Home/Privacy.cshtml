@{
    ViewData["Title"] = "About Us";
}

<!-- About Section -->
<section class="about-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="~/images/web6.jpg" class="about-img" alt="Food Market">
            </div>
            <div class="col-md-6">
                <h2>Welcome to Urban Food Market</h2>
                <p>
                    At <strong>Urban Food Market</strong>, we bring you the freshest, locally sourced organic produce, dairy, meats, and bakery items.
                    Our mission is to connect local farmers with our community and provide high-quality food that is both delicious and nutritious.
                </p>
                <p>
                    Since 2010, we have been committed to <strong>supporting sustainable agriculture, fair trade, and eco-friendly packaging</strong>.
                    Whether you're looking for farm-fresh vegetables, artisanal cheeses, or gourmet pastries, we have something for everyone!
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Our Mission Section -->
<section class="mission-section">
    <div class="container">
        <h2>Our Mission</h2>
        <p class="lead">"Delivering fresh, organic, and locally sourced food while supporting sustainable farming."</p>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <img src="~/images/web6.jpg" class="feature-img" alt="Farm Fresh" />
                <h4>Farm Fresh</h4>
                <p>Our products come straight from organic farms to your table.</p>
            </div>
            <div class="col-md-4">
                <img src="~/images/web8.jpg" class="feature-img" alt="Bakery" />
                <h4>Freshly Baked</h4>
                <p>Enjoy artisanal bread, pastries, and desserts baked daily.</p>
            </div>
            <div class="col-md-4">
                <img src="~/images/web7.jpg" class="feature-img" alt="Handcrafts">
                <h4>Sustainability</h4>
                <p>We support eco-friendly practices and reduce food waste.</p>
            </div>
        </div>
    </div>
</section>

<style>
    /* About Section */
    .about-section {
        padding: 60px 0;
    }

    .about-img {
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
        width: 100%;
    }

    /* Mission Section */
    .mission-section {
        background: #2E7D32; /* Deep Green */
        color: white;
        padding: 40px 0;
        text-align: center;
    }

    /* Features Section */
    .features-section {
        padding: 50px 0;
        text-align: center;
    }

    .feature-img {
        border-radius: 10px;
        width: 80%;
        margin-bottom: 20px;
    }

    body {
        font-family: 'Poppins', sans-serif;
        color: #333;
        background-color: #E8F5E9; /* Soft Green */
    }
</style>