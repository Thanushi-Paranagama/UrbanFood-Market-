@model MyWebApp.Models.ItemFarmer
@{
    ViewData["Title"] = "Update Item";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">Update Item</h2>
                        <a asp-controller="Farmer" asp-action="Index" class="btn btn-dark btn-sm">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Farmer" asp-action="Update">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label for="category" class="form-label">Category:</label>
                            <select name="Category" id="category" class="form-select" required>
                                <option value="Vegetables" selected="@(Model.Category == "Vegetables" ? "selected" : null)">Vegetables</option>
                                <option value="Fruits" selected="@(Model.Category == "Fruits" ? "selected" : null)">Fruits</option>
                                <option value="Dairy Products" selected="@(Model.Category == "Dairy Products" ? "selected" : null)">Dairy Products</option>
                                <option value="Bakery Items" selected="@(Model.Category == "Bakery Items" ? "selected" : null)">Bakery Items</option>
                                <option value="Handcrafts" selected="@(Model.Category == "Handcrafts" ? "selected" : null)">Handcrafts</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="itemName" class="form-label">Item Name:</label>
                            <input type="text" name="ItemName" id="itemName" value="@Model.ItemName" class="form-control" required />
                        </div>
                        
                        <div class="mb-3">
                            <label for="quantity" class="form-label">Quantity:</label>
                            <input type="number" name="Quantity" id="quantity" value="@Model.Quantity" class="form-control" required />
                        </div>
                        
                        <div class="mb-3">
                            <label for="price" class="form-label">Price:</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" name="Price" id="price" step="0.01" value="@Model.Price" class="form-control" required />
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Item
                            </button>
                        </div>
                    </form>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-success mt-3">
                            <i class="fas fa-check-circle"></i> @ViewBag.Message
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-circle"></i> @ViewBag.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>